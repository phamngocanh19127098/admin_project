<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>List Of Users </h2>
            <h5>Welcome to my web, Love to see you back! </h5>

        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    User List
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class ="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div id="dataTables-example_filter" class="dataTables_filter"></div>
                                    <a class="btn btn-success" href="/add" >

                                        <i class="fa fa-plus"></i>
                                        Add
                                    </a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead class="thead thead-dark">
                            <tr>
                                <th  scope="col">id</th>
                                <th  scope="col">Full name</th>
                                <th  scope="col">Username</th>
                                <th  scope="col">Password</th>
                                <th  scope="col">email</th>
                                <th  scope="col">Update</th>
                                <th  scope="col">Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each user}}
                                <tr>
                                    <td class="small" >{{this.id}}</td>
                                    <td class="small">{{this.fullname}}</td>
                                    <td class="small">{{this.username}}</td>
                                    <td class="small">{{this.password}}</td>
                                    <td class="small">{{this.email}}</td>

                                    <td>
                                        <a class="btn btn-success" href="/users/update/{{this.id}}" >

                                            <i class="fa fa-edit"></i>
                                            Update
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" href="/users/delete/{{this.id}}" onclick="return confirm('Are you sure to delete this record');">
                                            <i class="fa fa-trash-o"></i>
                                            Delete</a>
                                    </td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                    Showing users
                                </div>
                            </div>
                            <nav aria-label="...">

                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>